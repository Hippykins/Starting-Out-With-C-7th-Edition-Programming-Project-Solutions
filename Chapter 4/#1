//Solution for Programming Project #1 in Chapter 4

#include <iostream>
using namespace std;

int main() {
    
    double num1, num2, smaller, larger;
    
    cout << "Please enter the 1st number: ";
    cin >> num1; 
    
    cout << "Please enter the 2nd number: ";
    cin >> num2;
    
    smaller = (num1 < num2) ? num1 : num2;
    cout << "The smaller number is: " << smaller << endl;
    
    larger = (num1 < num2) ? num2 : num1;
    cout << "The larger number is: " << larger << endl;
    
    return 0;
}
