//Solution for Programming Project #3 in Chapter 4

#include <iostream>
using namespace std;

int main() {
    
    int day, month, year;

     //prompt user to enter the date
     cout << "Enter month in numeric form: ";
     cin >> month;
     cout << "Enter day: ";
     cin >> day;
     cout << "Enter year's last two digits: ";
     cin >> year;

     //check if date is magic and print message on screen
     if (year == day * month) {
        cout << "The date is magic!\n";
     }
     else {
        cout << "The date is not magic.\n";
     }
}
