//Solution for Programming Project #6 in Chapter 4

#include<iostream>
using namespace std;
int main()
 {
     //declare mass variable to store user input
     double mass;

     //prompt user to enter mass in KG and read
     cout << "Enter object's mass in KG: ";
     cin >> mass;

     //calculate and display weight
     cout << "This object's weight is " << mass * 9.8 << " Newtons.\n";

     //use if/else if statements to determine whether
     //object is too heavy or too light
     if ((mass * 9.8) > 1000){
        cout << "Object is too heavy.\n";
     }
     else if ((mass * 9.8) < 10){
        cout << "Object is too light.\n";
     }
     
     //return 0 to mark successful completion of program
     return 0;
 }
